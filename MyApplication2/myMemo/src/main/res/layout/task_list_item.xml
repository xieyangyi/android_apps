<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_task_item_contet"
        android:textSize="@dimen/task_list_item_content_size"
        android:layout_marginTop="@dimen/task_list_item_margin"
        android:layout_marginLeft="@dimen/task_list_item_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginBottom="@dimen/task_list_item_margin"
        android:layout_marginLeft="@dimen/task_list_item_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_task_item_date"
            android:textSize="@dimen/task_list_item_date_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="   "
            android:textSize="@dimen/task_list_item_date_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_task_item_time"
            android:textSize="@dimen/task_list_item_time_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>

