<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.b47714.mymemo" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity android:name=".TaskListActivity" android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".TaskDetailActivity">
            <intent-filter>
                <action android:name="com.example.b47714.mymemo.NEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".AlarmActivity">
            <intent-filter>
                <action android:name="com.example.b47714.mymemo.AlarmAction" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver android:name=".TaskReceiver">
            <intent-filter>
                <action android:name="com.example.b47714.mymemo.TaskReceiver"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <provider android:name=".TaskListProvider"
            android:authorities="com.example.b47714.mymemo.TaskList">
        </provider>

    </application>

    <uses-permission android:name="android.permission.VIBRATE"/>
</manifest>
