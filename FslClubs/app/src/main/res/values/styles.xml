<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/actionBar</item>
        <item name="android:itemBackground">@drawable/actionbar_bg_selector</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_bg_selector</item>
        <item name="android:itemTextAppearance">@style/overflowTextStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/overflowButton</item>
        <item name="android:actionBarTabTextStyle">@style/tabTextStyle</item>
        <item name="android:actionBarTabStyle">@style/tabStyle</item>
    </style>

    <style name="actionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#303537</item>
        <item name="android:titleTextStyle">@style/titleTextStyle</item>
    </style>

    <style name="titleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#cfcfcf</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="overflowTextStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="overflowButton" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <!--<item name="android:src">@drawable/actionbar_more_icon</item>-->
    </style>

    <style name="tabTextStyle" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@drawable/actionbar_tab_textcolor_selector</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="tabStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <!-- top textview -->
    <style name="top_text">
        <item name="android:textSize">@dimen/activity_top_txt_sz</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/activity_top_txt_padding</item>
        <item name="android:paddingBottom">@dimen/activity_top_txt_padding</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- bottom button -->
    <style name="bottom_btn_layout">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/actionbar_tab_unselected</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bottom_btn">
        <item name="android:textSize">@dimen/activity_bottom_btn_text_sz</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- activity main -->
    <style name="activity_main_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@drawable/main_tab_textcolor_selector</item>
        <item name="android:button">@null</item>
    </style>

    <!-- fragment me -->
    <style name="fragment_me_layout">
        <item name="android:paddingTop">@dimen/fregment_me_padding_top</item>
        <item name="android:paddingBottom">@dimen/fregment_me_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/fregment_me_padding_left</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fragment_me_icon">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">@dimen/fragment_me_icon_sz</item>
        <item name="android:layout_height">@dimen/fragment_me_icon_sz</item>
    </style>

    <style name="fragment_me_text">
        <item name="android:paddingLeft">@dimen/fregment_me_padding_left</item>
        <item name="android:textSize">@dimen/fragment_me_text_sz</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--activity persion info -->
    <style name="activity_person_info_layout">
        <item name="android:paddingTop">@dimen/activity_person_info_padding_top</item>
        <item name="android:paddingBottom">@dimen/activity_person_info_padding_bottom</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="activity_person_info_text">
        <item name="android:textSize">@dimen/activity_person_info_text_sz</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="activity_person_info_text_content">
        <item name="android:textSize">@dimen/activity_person_info_text_content_sz</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- activity settings -->
    <style name="activity_settings_checkbox">
        <item name="android:paddingTop">@dimen/activity_settings_padding_top</item>
        <item name="android:paddingBottom">@dimen/activity_settings_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/activity_settings_padding_left</item>
        <item name="android:paddingRight">@dimen/activity_settings_padding_left</item>
        <item name="android:textSize">@dimen/settings_alarm_off_text_sz</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
