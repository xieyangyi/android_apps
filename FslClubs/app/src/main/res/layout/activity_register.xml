<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/register"
            style="@style/top_text" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_reg_padding"
        android:paddingLeft="@dimen/activity_reg_padding"
        android:paddingRight="@dimen/activity_reg_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/edt_reg_phone"
            android:textSize="@dimen/activity_reg_edtsize"
            android:hint="@string/username"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_reg_password"
            android:textSize="@dimen/activity_reg_edtsize"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_reg_query_password"
            android:textSize="@dimen/activity_reg_edtsize"
            android:hint="@string/query_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_reg_name"
            android:textSize="@dimen/activity_reg_edtsize"
            android:hint="@string/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_reg_submmit"
            android:text="@string/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
