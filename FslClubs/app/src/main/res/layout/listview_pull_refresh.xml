<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listview_pull_layout_height">

        <RelativeLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="@dimen/listview_pull_layout_height">
            <ImageView
                android:id="@+id/arrow"
                android:src="@drawable/pull_refresh_arrow"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ProgressBar
                android:id="@+id/progress_bar"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/listview_pull_progress_bar_width"
                android:layout_height="@dimen/listview_pull_progress_bar_height" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="12"
            android:layout_width="0dp"
            android:layout_height="@dimen/listview_pull_layout_height">
            <TextView
                android:id="@+id/descrption"
                android:text="@string/listview_pull_to_refresh"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/updated_at"
                android:text="@string/listview_update_at"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
